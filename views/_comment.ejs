<li id="comment-<%= comment._id %>">
        <p>
            <% if (locals.user && (locals.user.id == comment.user._id)){ %>
            
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">X</a>
            </small>
            <% } %>
            <%= comment.content %>
            <br>
            <small>
                <i>-<%= comment.user.name %></i>
            </small>
            <small>
                <% if(locals.user){ %>
                    <a href="/likes/toggle/?id=<%=comment._id%>&type=Comment" data-likes="<%= comment.likes.length %>" class="toggle-like-button">
                        <%= comment.likes.length %> Likes
                    </a>    
                    
                <% }else{ %>
                    
                    <%= comment.likes.length %> Likes
    
                <%}%>
            </small>
        </p>    

</li>